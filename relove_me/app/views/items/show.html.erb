<div id="results">
  <ul>
    <li><%= @item.title %></li>
    <li><%= @item.condition %></li>
    <li><%= @item.description %></li>
    <li><%= @item.price_range %></li>
  </ul>
</div>

<div id="image" width='282' height='198'>
  <%= image_tag(@item.image) %>
</div>

<div id="add">
  <form action="<%= new_item_path(@item.id) %>" method="get">
    <button>Add another item!</button>
  </form>
</div>