%section.itemlist
  = form_for @item do |f|
    = f.label :title
    = f.text_field :title, :autofocus => true
    = f.label :condition
    = f.text_field :condition, :autofocus => true
    = f.label :description
    = f.text_area :description
    = f.label :image
    = f.url_field :image
    = f.label :price_range
    = f.text_field :price_range


    = f.submit